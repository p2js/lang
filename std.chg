fn print<T>(s: T)
where
    T: fmt::Display
{
    let string = T::to_string(&s);
    let parts = str::StrRepr::from(string.as_str());
    libc::write(1, ptr::cast(parts.ptr), parts.len);
}

fn println<T>(s: T)
where
    T: fmt::Display
{
    print(s);
    print("\n");
}

fn fatal(s: str*) {
    println(s);
    libc::abort();
}
